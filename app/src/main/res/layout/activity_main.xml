<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="@color/green">

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/quando"
        android:layout_centerHorizontal="true"
        android:text="@string/get_healthy_with_diete"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/introductionEditText"
        android:layout_above="@+id/getRecipeButton"
        android:text="@string/enter_your_meal"
        android:fontFamily="@font/quando"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/getRecipeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="95dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/quando"
        android:text="@string/get_a_recipe"
        android:textColor="@color/black"
        android:theme="@style/myButtonTheme"/>

</RelativeLayout>